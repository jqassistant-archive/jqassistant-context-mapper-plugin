<jqassistant-plugin xmlns="http://schema.jqassistant.org/plugin/v1.10"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://schema.jqassistant.org/plugin/v1.10 https://schema.jqassistant.org/plugin/jqassistant-plugin-v1.10.xsd"
                    name="jQAssistant Context Mapper Plugin" id="jqa.plugin.contextmapper">
    <description>Provides a scanner for ContextMapper files and renderer for ContextMapper diagrams.</description>
    <model>
        <class>org.jqassistant.contrib.plugin.contextmapper.model.BoundedContextBaseDescriptor</class>
        <class>org.jqassistant.contrib.plugin.contextmapper.model.BoundedContextDefinesDependency</class>
        <class>org.jqassistant.contrib.plugin.contextmapper.model.BoundedContextDependencyDescriptor</class>
        <class>org.jqassistant.contrib.plugin.contextmapper.model.BoundedContextDependsOn</class>
        <class>org.jqassistant.contrib.plugin.contextmapper.model.BoundedContextDescriptor</class>
        <class>org.jqassistant.contrib.plugin.contextmapper.model.ContextMapDescriptor</class>
        <class>org.jqassistant.contrib.plugin.contextmapper.model.ContextMapperDescriptor</class>
        <class>org.jqassistant.contrib.plugin.contextmapper.model.ContextMapperFileDescriptor</class>
        <class>org.jqassistant.contrib.plugin.contextmapper.model.DomainDescriptor</class>
        <class>org.jqassistant.contrib.plugin.contextmapper.model.SubdomainDescriptor</class>
    </model>
    <scanner>
        <class>org.jqassistant.contrib.plugin.contextmapper.ContextMapperScannerPlugin</class>
    </scanner>
    <rules>
        <resource>context-mapper-plugin/index.adoc</resource>
    </rules>
    <report>
        <class id="context-mapper-diagram">org.jqassistant.contrib.plugin.contextmapper.ContextMapperReportPlugin</class>
    </report>
</jqassistant-plugin>